{
  "$schema": "https://raw.githubusercontent.com/getcursor/mcp/main/schemas/mcp.schema.json",
  "clients": {
    "default": {
      "python": {
        "venv": ".venv",
        "requirements": "requirements.txt"
      }
    }
  },
  "capabilities": {
    "allowRunTests": true,
    "allowRunLinters": true,
    "allowEditFiles": true,
    "allowRunCommands": true
  },
  "project": {
    "language": "python",
    "testCommand": "pytest -q",
    "lint": {
      "python": {
        "flake8": true,
        "black": true,
        "isort": true
      }
    },
    "ignore": [
      "data/",
      "logs/",
      "checkpoints/",
      "external/sapient-hrm/",
      "**/__pycache__/",
      "**/.ipynb_checkpoints/"
    ]
  }
}
